<link rel='stylesheet' href='/stylesheets/view/basic.css' />
<link rel='stylesheet' href='/stylesheets/iconfont.css' />
<link rel='stylesheet' href='/stylesheets/view/index.css' />
<link rel='stylesheet' href='/stylesheets/view/itemCategory.css' />

<div class="main">
  <article class="index_search goodslist_search">
    <!--<a href="#" class="goodslist_arrow"><i class="iconfont icon-left-arrow"></i></a>-->
    <p><input type="search" class="search-content" /><i class="iconfont icon-search"></i></p>
    <a href="#" class="goodslist_text btn-search" >搜索</a>
  </article>
  <section class="goodsClass">
    <div class="top_menu">
      <div class="common liactive" style="border-right: 1px #ddd solid;">
        <span class="lan-cn">分类</span>
        <span class="lan-en">Category</span>
      </div>
      <div class="common">
        <span class="lan-cn">品牌</span>
        <span class="lan-en">Brand</span>
      </div>
    </div>

    <div class="ul">
      <div class="bottom_content">
        <div class="body_1">
          <div class="goodsListClass">
            <ul>
              {{# each categoryList}}
                <li>
                  <a href="#C{{@index}}" class="lan-cn">{{this.categoryVO.categoryCN}}</a>
                  <a href="#C{{@index}}" class="lan-en">{{this.categoryVO.categoryEN}}</a>
                </li>
              {{/each}}
            </ul>
          </div>
          <div class="goodsClassDetailed">

            {{# each categoryList}}
              <div class="goodsDetailedWrap" id="C{{@index}}">
                <div class="goodsDetailedtop">
                  <span class="lan-cn">{{this.categoryVO.categoryCN}}</span>
                  <span class="lan-en hidden">{{this.categoryVO.categoryEN}}</span>
                </div>
                <div class="goodsDetailedbottom">
                  <ul>
                    {{# each this.subCategoryVOList}}
                      <li>
                        <a href="/items?categoryID={{../this.categoryVO.categoryID}}&subCategoryID={{this.subCategoryID}}">
                          <span class="lan-cn">{{this.subCategoryCN}}</span>
                          <span class="lan-en hidden">{{this.subCategoryEN}}</span>
                        </a>
                      </li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            {{/each}}
          </div>
        </div>

        <div class="body_1">
          <section class="dailyRushed">
            <article class="index_title">
              <h2>推荐品牌 <span>货好不贵的良心品牌</span></h2>
            </article>
            <article class="brandlist" style="position: absolute; height: 100%; background: #fff;">
              <ul>
                {{# each brandList}}
                  <li>
                    <a href="/items?brandID={{this.brandID}}">
                      <img src="{{this.imageSrc}}" width="100%" height="100%" alt="" />
                      <p class="lan-cn">{{this.brandCN}}</p>
                      <p class="lan-en hidden">{{this.brandEN}}</p>
                    </a>
                  </li>
                {{/each}}
              </ul>
            </article>
          </section>
        </div>
      </div>
    </div>
  </section>
  <footer>
    <ul>
      <li>
        <a href="/index">
          <i class="iconfont icon-shouye1"></i>
          <p class="lan-cn">首页</p>
          <p class="lan-en">Index</p>
        </a>
      </li>
      <li>
        <a href="/itemCategory">
          <i class="iconfont icon-fenlei"></i>
          <p class="lan-cn">分类</p>
          <p class="lan-en">Category</p>
        </a>
      </li>
      <li>
        <a href="shoppingCart.html">
          <i class="iconfont icon-gouwuche3"></i>
          <p class="lan-cn">购物车</p>
          <p class="lan-en">Shopping Cart</p>
        </a>
      </li>
      <li>
        <a href="allorder.html">
          <i class="iconfont icon-wode"></i>
          <p class="lan-cn">我的</p>
          <p class="lan-en">Mine</p>
        </a>
      </li>
    </ul>
  </footer>
</div>

<script type="text/javascript" src="/javascripts/view/itemCategory.js"></script>